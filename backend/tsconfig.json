{
    "compilerOptions": {
        "types": ["node", "jest"],
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "target",
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tests/*.test.ts",
        "node_modules"
    ]
}